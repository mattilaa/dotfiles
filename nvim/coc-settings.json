{
    "languageserver": {
        "rust": {
            "command": "~/.cargo/bin/ra_lsp_server",
            "filetypes": [
                "rust",
                "rs"
            ],
            "rootPatterns": [
                "Cargo.toml"
            ]
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "clangd": {
            "command": "clangd",
            "args": [
                "--background-index"
            ],
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ]
        }
    },
    // explorer
    "explorer.width": 30,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.keyMappings": {
      "<cr>": ["expandable?", "expand", "open"],
      "v": "open:vsplit"
    }
}
